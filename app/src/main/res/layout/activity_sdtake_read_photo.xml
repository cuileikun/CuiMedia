<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pic.fifth.SDTakeReadPhotoActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circle" />

    <TextView
        android:id="@+id/tv_pic_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:gravity="center_horizontal"
        android:text="图片数量：" />

    <TextView

        android:id="@+id/tv_pic_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pic_num"
        android:gravity="center_horizontal"
        android:text="图片拍摄时间：" />


    <Button
        android:id="@+id/takePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pic_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="打开相机" />

    <Button
        android:id="@+id/takeGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="打开相册" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeGallery"
        android:text="已拍摄的图片信息" />

    <ListView
        android:id="@+id/lv_pic_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_title" />

</RelativeLayout>
