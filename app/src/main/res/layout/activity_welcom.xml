<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mbcloud_cuilk.cuilkvedioplayer.WelcomActivity">

    <Button
        android:id="@+id/btn_vedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="视频" />

    <Button
        android:id="@+id/btn_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片" />

    <Button
        android:id="@+id/btn_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="录音" />

    <Button
        android:id="@+id/btn_save_read_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据存储与读取" />
    <Button
        android:id="@+id/btn_scroll_pull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrollView 下拉刷新" />
    <Button
        android:id="@+id/btn_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecycleView 下拉刷新" />
    <Button
        android:id="@+id/btn_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="安卓图片渐变动画" />
</LinearLayout>
